classdef prime < handle
    
    properties
        % Data ID
        folder_data;                                                % Data path structure
        data_id;                                                      % Data ID structure
        fitsHeader;                                                  % Fits file header      
        % Capabilities
        trs;                                                             % telemetry reading and processing
        psfr                                                             % Forward psf Reconstruction
        bestFit;                                                       % Hybrid psf reconstruction
    end
    
    methods
        
        function obj = prime(path_night,path_calibration,varargin)
            inputs = inputParser;
            inputs.addRequired('path_night',@ischar);
            inputs.addRequired('path_calibration',@ischar);
            inputs.parse(path_night,path_calibration,varargin{:});
            
            %% 1\ CHECK INPUTS
            fprintf('Hello there, I am PRIME and I will be your guide in the cruel AO world !\n')
            fprintf('You can request me to do whatever is in my capabilities (lucky you), which are: ! \n')
            
        end
        
        %% FOLDERS CHECK
        
        
      end
end




